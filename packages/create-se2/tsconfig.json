{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "outDir": "dist"
  },
  "include": [
    "src",
    "templates"
  ],
  "exclude": [
    "node_modules"
  ],
}